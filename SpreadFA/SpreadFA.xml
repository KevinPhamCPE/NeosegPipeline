<?xml version="1.0" encoding="utf-8"?>
<executable>
   <title>Spread FA</title>
   <description>A tool to spread the FA according to the shift (threshold) and the sigma scale. For any suggestion or question, please contact cherel[at]unc.edu</description>
   <contributor>Marie Cherel</contributor>
   <version>1.1</version>
   <parameters>
      <file>
	      <name>input</name>
	      <description>Path of the input image</description>
	      <longflag>input</longflag>
	      <label>input path</label>
      </file>
      <file>
	      <name>output</name>
	      <description>Path of the output image</description>
	      <longflag>output</longflag>
	      <label>output path</label>
      </file>
      <double>
	      <name>shift</name>
	      <description>Shift of the spreading</description>
	      <longflag>shift</longflag>
	      <label>shift value</label>
      </double>
      <double>
	      <name>sigma</name>
	      <description>Sigma scale of the spreading</description>
	      <longflag>sigma</longflag>
	      <label>sigma scale value</label>
      </double>
   </parameters>
</executable>
